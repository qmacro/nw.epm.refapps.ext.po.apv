<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog title="{viewProperties>/approvalTitle}" class="nwEpmRefappsApprovePOApprovalDialogLayout">
		<content>
			<l:VerticalLayout width="100%">
			<Text text="{viewProperties>/approvalText}" class="nwEpmRefappsApprovePOTextLayout" />
			<TextArea value ="{viewProperties>/approvalNote}" rows="5" width="100%" placeholder="{i18n>xfld.approvalNote}" class="nwEpmRefappsApprovePOTextAreaLayout" />
			</l:VerticalLayout>
		</content>	
		<beginButton>
			<Button id="btnOK" text="{i18n>xbut.buttonOK}" press="onConfirmAction" />
		</beginButton>
		<endButton>
			<Button text="{i18n>xbut.buttonCancel}" press="onCancelAction" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>